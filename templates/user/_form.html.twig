{{ form_start(form) }}
<div class="mb-3">
    {{ form_label(form.firstname) }}
    {{ form_widget(form.firstname) }}
</div>
<div class="mb-3">
    {{ form_label(form.lastname) }}
    {{ form_widget(form.lastname) }}
</div>
<div class="mb-3">
    {{ form_label(form.profilPictureFile, 'Photo de Profile') }}
    {{ form_widget(form.profilPictureFile) }}
</div>
<div class="row flex-row-reverse justify-content-center gap-3">
    <button class="btn btn-primary text-light col-2"><i class="bi bi-pencil-square"></i> {{
        button_label|default('Sauvegarder') }}</button>

    {{ form_end(form) }}