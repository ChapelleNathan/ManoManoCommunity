{% extends 'base.html.twig' %}

{% block title %}New Post
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('form') }}
{% endblock %}

{% block body %}
	<main class="container">
		<h1 class="text-center text-secondary my-5 fw-bold hello">
			Je partage ma r√©alisation</h1>

		<div class="row">
		
			<div class="card post-form col-12 col-md-6 offset-md-3 d-flex flex-column justify-content-center align-items-center rounded-2 p-3 mt-4">

				<div class="container">
					<div class="card-text p-3 rounded-top d-flex justify-content-center align-content-center">
						<img src="{{ asset('build/images/')}}{{app.user.profilPicture}}" alt="avatar" class="avatar rounded-circle me-2">
						<p class="fw-bolder text-secondary">{{app.user.firstname}}</p>
					</div>
					{{ form_start(form) }}
					<div class="form-floating my-4">
						<div class="d-flex ">
							{{ form_label(form.title) }}
							{{ form_widget(form.title) }}
						</div>
						<div class="">
							{{ form_label(form.description) }}
							{{ form_widget(form.description) }}
						</div>
						<div class="">
							{{ form_label(form.photo) }}
							{{ form_widget(form.photo) }}
						</div>
					</div>
				</div>
				<button class="btn btn-primary p-3 mb-2 text-light fw-bold">{{ button_label|default('Poster') }}</button>
				{{ form_end(form) }}
				<a href="{{ path('post_index') }}" class="text-secondary"> <i class="bi bi-box-arrow-left"></i> Retour</a>
			</div>
		</div>
	</main>


{% endblock %}
