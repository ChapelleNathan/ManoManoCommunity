{% extends 'base.html.twig' %}

{% block title %}Create a post
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('form') }}
{% endblock %}

{% block body %}
	<main class="container my-5">
		<h1 class="text-center text-secondary mb-5 fw-bold hello">
			Create a post</h1>

		<div class="row">

			<div class="card post-form pb-4 px-0 col-12 col-md-6 offset-md-3 d-flex flex-column justify-content-center align-items-center rounded-2 mt-4">


				<div class="card-header header-user d-flex flex-row justify-content-center align-items-center py-3">
					<img src="{{ asset('build/images/')}}{{app.user.profilPicture}}" alt="avatar" class="avatar rounded-circle me-2">
					<p class="fw-bold m-0 text-secondary">{{app.user.firstname}}</p>
				</div>
				<div class="container py-4 px-5">
					{{ form_start(form) }}
					<div class="form-floating my-4">
						<div class="d-flex ">
							{{ form_label(form.title) }}
							{{ form_widget(form.title) }}
						</div>
						<div class="">
							{{ form_label(form.description) }}
							{{ form_widget(form.description) }}
						</div>
						<div class="">
							{{ form_label(form.photo) }}
							{{ form_widget(form.photo) }}
						</div>
					</div>
				</div>
				<button class="btn btn-primary p-3 mb-4 text-light fw-bold">{{ button_label|default('Create') }}</button>
				{{ form_end(form) }}
				<a href="{{ path('post_user_show') }}" class="text-secondary">
					<i class="bi bi-box-arrow-left"></i>
					Return</a>
			</div>
		</div>
	</main>
{% endblock %}
