{% extends 'base.html.twig' %}

{% block title %}My posts
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('feed') }}
{% endblock %}

{% block body %}

	<div class="container my-5">
		<div class="row g-3">
			<h1 class="text-center my-5">My published ideas <i class="bi bi-lightbulb"></i></h1>
			<header class="d-flex flex-row justify-content-between align-items-end">
				<div>
					<h2 class="text-left text-secondary fw-bold fs-4">Your last posts </h2>
					<h3 class="text-left fs-6">Create, update, delete</h3>
				</div>
				<div class="d-flex flex-row">
					<div class="m-0 d-flex justify-content-center align-items-center text-secondary fs-4">
						Let's create!</div>
					<a href="{{ path('post_new') }}"><i class="bi bi-plus-circle fs-2 text-primary ms-3"></i></a>

				</div>
			</header>
			{% for post in posts %}
				{% include "components/_card.html.twig" %}

			{% else %}
				no records found

			{% endfor %}
		</div>
	</div>
{% endblock %}
